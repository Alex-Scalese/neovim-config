{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
	  "filetypes": ["scala", "sbt"]
	},
	"dockerfile": {
		"command": "docker-langserver",
		"filetypes": ["dockerfile"],
		"args": ["--stdio"]
	},
	"bash": {
		"command": "bash-language-server",
		"args": ["start"],
		"filetypes": ["sh"],
		"ignoredRootPaths": ["~"]
	}
  },
  "coc.preferences.formatOnType": true
}
